<div class="p-3">
  <div class="row mb-3 mt-3">
    <div class="col-md-6 col-xl-4">
      <div class="card">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-6">
              <h5 class="text-muted fw-normal mt-0 text-truncate" title="Jobs">Jobs</h5>
              <h3 class="my-2 py-1"><%= Activejob::Web::Job.count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-6">
              <h5 class="text-muted fw-normal mt-0 text-truncate" title="Job Executions">Job Executions</h5>
              <h3 class="my-2 py-1"><%= Activejob::Web::JobExecution.count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-12">
              <h5 class="text-muted fw-normal mt-0" title="Job Execution Requests">Job Execution Requests</h5>
              <h3 class="my-2 py-1"><%= Activejob::Web::JobApprovalRequest.count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3 p-3">
    <div class="col-12 col-md-12 col-xl-12 mt-md-0 mt-4">
      <div class="card h-100">
        <div class="card-header pb-0 p-3">
          <div class="row">
            <div class="col-md-8 d-flex align-items-center">
              <h3 class="mb-3">Activejob Web Jobs</h3>
            </div>
          </div>
        </div>
        <div class="card-body">
          <% if @jobs.present? %>
          <table class="table">
            <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">ID</th>
              <th scope="col">Queue</th>
              <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            <% @jobs.each do |job| %>
              <tr>
                <td><%= job.title %></td>
                <td><%= job.description %></td>
                <td><%= job.id %></td>
                <td><%= job.queue %></td>
                <td><%= link_to 'Show', activejob_web_job_path(job), class: 'btn btn-outline-primary' %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
            <% else %>
          <p> No jobs available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

